{
    "name": "platform/dev-tool",
    "description": "Dev tools package for Laravel CMS application",
    "type": "package",
    "autoload": {
        "psr-4": {
            "Platform\\DevTool\\": "src"
        }
    },
    "require": {
        "platform/platform": "*@dev",
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "squizlabs/php_codesniffer": "^3.3",
        "barryvdh/laravel-debugbar": "^3.2",
        "barryvdh/laravel-ide-helper": "^2.6",
        "phpmd/phpmd": "^2.8",
        "doctrine/dbal": "^2.9",
        "platform/git-commit-checker": "*@dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Platform\\DevTool\\Providers\\DevToolServiceProvider"
            ]
        }
    }
}
